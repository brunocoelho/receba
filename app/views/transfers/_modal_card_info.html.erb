<div class="modal fade" id="modalCardInfo" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Enviar dinheiro para <%= user.name %></h4>
      </div>

      <div class="modal-body">
        <div class="form-group">
          <div class="col-lg-7">
            <%= label_tag :card_number, "Número do cartão" %>
            <%= text_field_tag :card_number, nil, { id: "card_number", class: 'form-control form-card', value: '4984234039710196' } %>
            <span class="card-check-error"></span>
          </div>
        </div>

        <div class="form-group">
          <div class="col-lg-7">
            <%= label_tag :card_holder_name, "Nome (como escrito no cartão)" %>
            <%= text_field_tag :card_holder_name, nil, { id: "card_holder_name", class: 'form-control form-card', value: 'Joao' } %>
            <span class="card-check-error"></span>
          </div>
        </div>

        <div class="form-group">
          <div class="col-lg-7">
            <%= label_tag :card_expiration_month, "Mês de expiração" %>
            <%= number_field_tag :card_expiration_month, nil, { id: "card_expiration_month", class: 'form-control form-card', in: 1..12, value: '02' } %>
            <span class="card-check-error"></span>
          </div>
        </div>

        <div class="form-group">
          <div class="col-lg-7">
            <%= label_tag :card_expiration_year, "Ano de expiração" %>
            <%= number_field_tag :card_expiration_year, nil, { id: "card_expiration_year", class: 'form-control form-card', value: '2014' } %>
            <span class="card-check-error"></span>
          </div>
        </div>

        <div class="form-group">
          <div class="col-lg-7">
            <%= label_tag :card_cvv, "Código de segurança" %>
            <%= text_field_tag :card_cvv, nil, { id: "card_cvv", class: 'form-control form-card', value: '134' } %>
            <span class="card-check-error"></span>
          </div>
        </div>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Voltar</button>
        <%= f.submit "Enviar", class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>