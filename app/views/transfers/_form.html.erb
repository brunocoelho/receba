<%= render "pagarme_script_tag" %>

<%= form_for(@transfer, role: "form") do |f| %>
  <% if @transfer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@transfer.errors.count, "error") %> impossibilitaram a transferência:</h2>
      <ul>
      <% @transfer.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :amount %><br>
    <%= f.text_field :amount %>
  </div>

  <div class="form-group">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div class="form-group">
    <%= label_tag :card_number, "Número do cartão" %>
    <br/>
    <%= text_field_tag :card_number, nil, { id: "card_number" } %>
  </div>

  <div class="form-group">
    <%= label_tag :card_holder_name, "Nome (como escrito no cartão)" %>
    <br/>
    <%= text_field_tag :card_holder_name, nil, { id: "card_holder_name" } %>
  </div>

  <div class="form-group">
    <%= label_tag :card_expiracy_month, "Mês de expiração" %>
    <br/>
    <%= text_field_tag :card_expiracy_month, nil, { id: "card_expiracy_month" } %>
  </div>

  <div class="form-group">
    <%= label_tag :card_expiracy_year, "Ano de expiração" %>
    <br/>
    <%= text_field_tag :card_expiracy_year, nil, { id: "card_expiracy_year" } %>
  </div>

  <div class="form-group">
    <%= label_tag :card_cvv, "Código de segurança" %>
    <br />
    <%= text_field_tag :card_cvv, nil, { id: "card_cvv" } %>
  </div>

  <%= f.submit "Enviar", class: "btn btn-default" %>
<% end %>