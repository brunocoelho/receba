<%= form_for(@user) do |f| %>

  <div class="form-group">
    <%= f.label :name, "Nome" %><br>
    <%= f.text_field :name %>
  </div>

  <div class="form-group">
    <%= f.label :email, "Email" %><br>
    <%= f.text_field :email %>
  </div>

  <div class="form-group">
    <%= f.label :location, "Localização" %><br>
    <%= f.text_field :location %>
  </div>

  <div class="form-group">
    <%= f.label :username, "Login" %><br>
    <%= f.text_field :username %>
  </div>

  <%= f.submit "Salvar", class: "btn btn-default" %>
<% end %>